{%extends "layout.njk" %}
{%block head%}
  <title>Cursos | Rocketseat</title>

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>

{% endblock %}
{% block content %}

  <div id="wrapper">
    <h1>Conte√∫dos</h1>
  </div>

  <section class="cards">

    {% for item in items %}
      <div class="card" id="{{ item.id }}">
        <div class="card-image-container">
          <img src="{{ item.avatar_url }}" alt="Logo {{ item.name }}"/>

          <div class="card_content">
            <p>{{ item.name }}
            </p>
          </div>

          <div class="card_info">
            <p>{{ item.duration }}</p>
            <p class="card_price">
              {{ item.price }}
            </p>
          </div>

        </div>
      </div>

    {% endfor %}

  </section>

  <div class="modal_overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">
          close
        </i>
      </a>

      <a class="maximize-modal">
        <i class="material-icons">
          maximize
        </i>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>
  <script src="scripts.js"></script>

{% endblock %}