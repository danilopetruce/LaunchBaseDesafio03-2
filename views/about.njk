{%extends "layout.njk" %}
{% block head %}
  <title>About | Rocketseat</title>

{% endblock %}
{% block content %}

  <div id="wrapper">
    <a href="https://rocketseat.com.br" target="_blank">
      <img src="{{ about.avatar_url }}" alt="Logo da {{ about.name }}"/></a>
    <h1>{{ about.name }}</h1>
    <h2>
      {{ about.description }}
    </h2>
    <ul>
      <li>HTML</li>
      <li>CSS</li>
      <li>JAVASCRIPT</li>
    </ul>
  </div>

  <div id="links-footer" class="links">
    {% for link in about.links %}
      <a href="{{ link.url }}" target="_blank">{{ link.name }}</a >
    {% endfor %}
  </div>

{% endblock %}